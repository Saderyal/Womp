{
	"name": "womp",
	"description": "Womp is a React-like Web-Components library",
	"version": "1.0.0",
	"type": "module",
	"module": "./dist/womp.js",
	"main": "./dist/womp.js",
	"types": "./ts/womp.d.ts",
	"author": "Lorenzo Lannino <lanninolore@gmail.com>",
	"license": "ISC",
	"scripts": {
		"dev": "esbuild ts/womp.ts ts/ssr/index.ts --sourcemap --watch --outdir=dist --allow-overwrite",
		"build": "tsc & esbuild ts/womp.ts ts/ssr/index.ts --minify --outdir=dist --allow-overwrite",
		"jsx": "esbuild jsx-runtime.ts --minify --outfile=jsx-runtime.js --allow-overwrite",
		"perf": "tach --config tachometer.json"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Saderyal/Womp.git"
	},
	"bugs": {
		"url": "https://github.com/Saderyal/Womp/issues"
	},
	"homepage": "https://github.com/Saderyal/Womp",
	"exports": {
		".": {
			"types": "./ts/womp.d.ts",
			"default": "./dist/womp.js"
		},
		"./ssr": {
			"types": "./ts/ssr/index.d.ts",
			"default": "./dist/ssr/index.js"
		},
		"./jsx-runtime": {
			"types": "./jsx.d.ts",
			"default": "./jsx-runtime.js"
		},
		"./jsx-dev-runtime": {
			"types": "./jsx.d.ts",
			"default": "./jsx-runtime.js"
		}
	},
	"typesVersions": {
		"*": {
			"jsx-runtime": [
				"jsx.d.ts"
			],
			"jsx-dev-runtime": [
				"jsx.d.ts"
			]
		}
	},
	"devDependencies": {
		"esbuild": "0.20.1",
		"tachometer": "^0.7.0",
		"ts-loader": "^9.4.3"
	}
}
